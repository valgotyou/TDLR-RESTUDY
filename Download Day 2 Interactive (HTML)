const RAPID = [
  {q:"Active growth phase?",a:"Anagen"},
  {q:"Layer with pigment/strength?",a:"Cortex"},
  {q:"Two melanin types?",a:"Eumelanin & Pheomelanin"},
  {q:"Bond changed by perms/relaxers?",a:"Disulfide"},
  {q:"Porosity = ?",a:"Ability to absorb moisture"}
];

function shuffle(a){const b=[...a];for(let i=b.length-1;i>0;i--){const j=Math.floor(Math.random()*(i+1));[b[i],b[j]]=[b[j],b[i]]}return b}

let score=0;
const scoreBox=document.getElementById('scoreBox');

function renderQuestions(){
  score=0; scoreBox.textContent=`Score: ${score} / 20`;
  const cont=document.getElementById('questions'); cont.innerHTML="";
  const items=shuffle(BANK);
  items.forEach((item,idx)=>{
    const wrap=document.createElement('div'); wrap.className='q';
    wrap.innerHTML=`<h4>${idx+1}. ${item.q}</h4>`;
    const grid=document.createElement('div'); grid.className='choices';
    const exp=document.createElement('div'); exp.className='explain'; exp.innerHTML=`<strong>Answer: ${String.fromCharCode(97+item.answer)}) ${item.choices[item.answer]}</strong><br>${item.exp}`;
    item.choices.forEach((c,i)=>{
      const b=document.createElement('button'); b.className='choice'; b.textContent=`${String.fromCharCode(97+i)}) ${c}`;
      b.addEventListener('click',()=>{
        if(b.classList.contains('selected'))return;
        const correct=i===item.answer;
        b.classList.add('selected',correct?'correct':'incorrect');
        if(correct){score++; scoreBox.textContent=`Score: ${score} / 20`;}
        exp.classList.add('show');
      });
      grid.appendChild(b);
    });
    wrap.appendChild(grid); wrap.appendChild(exp); cont.appendChild(wrap);
  });
}

function renderRapid(){
  const cont=document.getElementById('rapid'); cont.innerHTML="";
  RAPID.forEach((item,idx)=>{
    const w=document.createElement('div'); w.className='q';
    w.innerHTML=`<h4>R${idx+1}. ${item.q}</h4>`;
    const btn=document.createElement('button'); btn.className='btn ghost'; btn.textContent='Show Answer';
    const ans=document.createElement('div'); ans.className='explain'; ans.innerHTML=`<strong>${item.a}</strong>`;
    btn.addEventListener('click',()=>ans.classList.toggle('show'));
    w.appendChild(btn); w.appendChild(ans); cont.appendChild(w);
  });
}

document.getElementById('shuffleBtn').addEventListener('click',renderQuestions);
document.getElementById('resetBtn').addEventListener('click',renderQuestions);
renderQuestions(); renderRapid();
</script>
